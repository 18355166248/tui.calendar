{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist/es5/",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/ts/*"],
      "@stories/*": ["stories/*"]
    },
    "sourceMap": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "src/js", "test"]
}
