{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist/es5/",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/ts/*"],
      "@stories/*": ["stories/*"]
    },
    "sourceMap": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "types",
    "src/ts/**/*.ts",
    "src/ts/**/*.tsx",
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "test-ts/**/*.ts",
    "test-s/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
