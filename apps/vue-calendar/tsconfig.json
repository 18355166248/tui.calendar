{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./types",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
    },
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
