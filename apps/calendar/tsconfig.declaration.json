{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@t/*": [
        "./src/types/*"
      ]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "stories",
    "playwright",
    "src/**/*.spec.*"
  ]
}
